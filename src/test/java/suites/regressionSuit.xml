<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name = "Regression"  parallel="true" thread-count = "2">
    <test name = "Chrome regression">
        <parameter name="browser" value="Chrome"></parameter>

        <classes>
            <class name ="tests.LoginTest"></class>
            <class name="tests.FailedLoginTest"></class>
            <class name="tests.RemoveItemFromBasketTest"></class>
            <class name="tests.ShoppingItemTest"></class>
            <class name="tests.LogoutTest"></class>


        </classes>
    </test>
    <test name = "Firefox regression">
        <parameter name="browser" value="Firefox"></parameter>
        <classes>
            <class name ="tests.LoginTest"></class>
            <class name="tests.FailedLoginTest"></class>
            <class name="tests.RemoveItemFromBasketTest"></class>
            <class name="tests.ShoppingItemTest"></class>
            <class name="tests.LogoutTest"></class>

        </classes>
    </test>
</suite>